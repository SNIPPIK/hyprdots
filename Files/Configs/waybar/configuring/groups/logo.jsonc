{
  // Arch logo
  "custom/logo": {
    "format": "{ }",
    "on-click": "sleep 0.2 && bash ~/.config/rofi/run.sh fullscreen",
    "on-click-right": "sleep 0.2 && bash ~/.config/rofi/run.sh fullscreen"
  },

  // Kernel version
  "custom/kernel": {
    "format": "üñ•  {}",
    "return-type": "string",
    "tooltip-format": "Kernel version",
    "exec": "sleep 0.1 && uname --kernel-release"
  },

  // Hyprdots version
  "custom/version": {
    "format": "Ôíà  {}",
    "return-type": "string",
    "tooltip-format": "Hyprdots version",
    "exec": "sleep 0.1 && cat ~/hyprdots/version"
  },

  // Total packages
  "custom/pacman": {
    "format": "Û∞èñ  {}",
    "return-type": "string",
    "tooltip-format": "Total packages",
    "restart-interval": 1500,
    "exec": "pacman -Q | wc -l"
  },

  // Updates Count
  "custom/updates": {
    "signal": 8,
    "format": "ÔÇ´ {}",
    "return-type": "json",
    "restart-interval": 400,
    "exec": "bash ~/.config/hypr/scripts/toolbox/updates.sh check",

    "on-click": "bash ~/.config/hypr/scripts/dialog.sh float update",
    "on-click-right": "bash ~/.config/hypr/scripts/dialog.sh float unused"
  },

  // Group logo
  "group/logo": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 350,
      "children-class": "not-memory",
      "transition-left-to-right": true
    },
    "modules": [
      "custom/logo",
      "custom/pacman",
      "custom/kernel",
      "custom/version",
      "idle_inhibitor",
      "custom/updates"
    ]
  }
}