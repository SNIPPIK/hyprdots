{
  // Arch logo
  "custom/logo": {
    "format": "<span foreground='aqua'>ïŒƒ</span>",
    "on-click": "sleep 0.2 && bash ~/.config/rofi/run.sh fullscreen",
    "on-click-right": "bash ~/.config/hypr/scripts/dialog.sh float settings",
    "tooltip-format": "<span foreground='aqua'>ïŒƒ</span> Information\n ó°³½ click-left:   App menu\n ó°³½ click-right:  Open Settings",
    "interval" : "once"
  },

  // Group logo
  "group/logo": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 350,
      "children-class": "not-memory",
      "transition-left-to-right": true
    },
    "modules": [
      "custom/logo",
      "custom/pacman",
      "custom/version",
      "custom/kernel",
      "custom/hyprland"
    ]
  },

  // Kernel version
  "custom/kernel": {
    "format": "ï…¼  {}",
    "return-type": "string",
    "tooltip-format": "Kernel version",
    "exec": "sleep 0.1 && uname --kernel-release",
    "interval" : "once"
  },

  // Current hyprland version
  "custom/hyprland": {
    "format": "ðŸ–¥  {}",
    "return-type": "string",
    "tooltip-format": "Hyprland version",
    "exec": "sleep 0.1 && pacman -Qe hyprland",
    "interval" : "once"
  },

  // Hyprdots version
  "custom/version": {
    "format": "ï’ˆ  {}",
    "return-type": "string",
    "tooltip-format": "DotFiles version",
    "exec": "sleep 0.1 && cat ~/hyprdots/dotfiles/version",
    "interval" : "once"
  },

  // Updates Count | Total packages
  "custom/pacman": {
    "signal": 8,
    "format": "{}",
    "return-type": "json",
    "restart-interval": 600,
    "exec": "bash ~/.config/hypr/scripts/toolbox/pacman.sh check",

    "on-click": "bash ~/.config/hypr/scripts/dialog.sh float-small update",
    "on-click-right": "bash ~/.config/hypr/scripts/dialog.sh float-small unused"
  }
}