[
    {
        "name": "mainbar",
        "layer": "top",
        "position": "top",
        "mod": "dock",
        "height": 31,
        "exclusive": true,
        "passthrough": false,
        "gtk-layer-shell": true,
        "reload_style_on_change": true,

        // Load Modules
        "include": [
            // Group load
            "~/.config/waybar/configuring/groups/workspace.jsonc",
            "~/.config/waybar/configuring/groups/audio.jsonc",
            "~/.config/waybar/configuring/groups/hyprutils.jsonc",
            "~/.config/waybar/configuring/groups/system.jsonc",

            // Hyprland load
            "~/.config/waybar/configuring/hyprland.jsonc",
            "~/.config/waybar/configuring/custom.jsonc"
        ],

        // Modules Left
        "modules-left": [
            "custom/logo",
            "group/workspace",
            "hyprland/window"
        ],

        // Modules Center
        "modules-center": [
        ],

        // Modules Right
        "modules-right": [
            "group/hyprgroup",
            "group/system",

            "hyprland/language",
            "tray",
            "network",
            "group/audio",
            "battery",
            "custom/notifications",
            "clock"
        ],

        // Clock
        "clock": {
            "format": "{:L%H:%M} ÔÄó",
            "format-alt": "ÔÅ≥ {:L%a, %b %d, %Y (%R)} ÔÄó",
            "tooltip-format": "<tt><small>{calendar}</small></tt>",
            "calendar": {
                "mode"          : "year",
                "mode-mon-col"  : 3,
                "weeks-pos"     : "right",
                "on-scroll"     : 1,
                "format": {
                    "months":     "<span color='#ffead3'><b>{}</b></span>",
                    "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                    "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                    "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                    "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                }
            },
            "actions":  {
                "on-click-right": "mode",
                "on-click-forward": "tz_up",
                "on-click-backward": "tz_down",
                "on-scroll-up": "shift_up",
                "on-scroll-down": "shift_down"
            }
        },

        // Battery
        "battery": {
            "interval": 45,
            "states": {
                "good": 80,
                "warning": 30,
                "critical": 15
            },
            "format": "{icon} {capacity}%",
            "format-alt": "{icon} {time}",
            "format-charging": "{icon}<span foreground='green'><sup>ÔÉß</sup></span> {capacity}%",
            "format-plugged": "{icon}<span foreground='green'><sup>Ôá¶</sup></span> {capacity}%",

            "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
            //"format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
            "bat-compatibility": true
        },

        // Network
        "network": {
            "format": "{icon}",
            "format-alt": "ÔÄô <span foreground='#99ffdd'> {bandwidthDownBytes}</span>  ÔÇì <span foreground='#ffcc66'> {bandwidthUpBytes}</span>",
            "format-icons": {
                "wifi": ["Û∞§Ø ", "Û∞§ü ", "Û∞§¢ ", "Û∞§¢ ", "Û∞§® "],
                "disconnected": ["ÔÅ±"],
                "ethernet": ["Û∞àÄ "],
                "disabled": ["ÔÅ™"],
                "linked": ["Óì¢"]
            },
            "tooltip-format": "{icon} Network information\n - <b>{ipaddr}/{cidr}</b> | <b>{gwaddr}</b>\n - Û∞§®\t<b>{signaldBm}dBm ({signalStrength}%)</b>\n - ÔÄí\t<b>{frequency}MHz</b>\n - \uF1E6\t<b>{ifname}</b>\n\n - Û∞≥Ω click-right:\tOpen settings\n - Û∞≥Ω click-middle:\tScan wifi",
            "max-length": 50,
            "interval": 5,

            "on-click-middle": "bash ~/.config/rofi/wifi.sh",
            "on-click-right": "sleep 0.1 && nm-connection-editor"
        },

        // hypridle switcher
        "idle_inhibitor": {
            "format": "{icon}",
            "format-icons": {
                "activated": "ÔÅ∞",
                "deactivated": "ÔÅÆ"
            },

            "tooltip-format-activated": "{icon} Idle manager\n - Status: deactivated",
            "tooltip-format-deactivated": "{icon} Idle manager\n - Status: activated"
        },

        // System tray
        "tray": {
            "icon-size": 16,
            "spacing": 10
        }
    },

    // Weather
    {
        "name": "weather",
        "layer": "bottom",
        "position": "bottom",
        "margin-right": 15,
        "margin-bottom": 25,

        "exclusive": false,

        // Load Modules
        "include": [],

        "modules-right": [
            "custom/weather"
        ],

        // Weather
        "custom/weather": {
            "format": " {} ",
            "return-type": "string",
            "exec": "curl -s 'wttr.in?format=%c+%C+%t' 2>/dev/null",
            "interval": 600,
            "on-click": "bash ~/.config/waybar/scripts/dialog.sh float weather",
            "on-click-right": "bash ~/.config/waybar/scripts/dialog.sh float weather"
        }
    }


    // Player (WIP)
    ,{
        "name": "player",
        "layer": "bottom",
        "position": "bottom",
        "margin-bottom": 10,
        "exclusive": false,

        "modules-center": [
            "image#album-art",
            "mpris"
        ],

        // Player working
        "mpris": {
            "interval": 7,

            "format": "{artist} - {title}\t{player_icon}\n{album}\t{status_icon}\n{position}/{length}",
            "tooltip-format": "{player_icon} {artist} - {title}\n{status_icon} {position}/{length}",

            "player-icons": {
                "chromium": "Ôâ®",
                "firefox": "ÓÄá",
                "default": "‚ñ∂",
                "mpv": "üéµ"
            },

            "status-icons": {
                "playing": "Û∞éÜ",
                "paused": "Û±ëΩ"
            }
        },

        // Image track
        "image#album-art": {
            "exec": "bash ~/.config/hypr/bin/hyprlock/player.sh --arturl",
            "size": 64,
            "interval": 15,

            "on-click": "wl-copy < $(bash ~/.config/hypr/bin/hyprlock/player.sh --arturl)",
            "on-click-right": "wl-copy < $(bash ~/.config/hypr/bin/hyprlock/player.sh --arturl)"
        }
    }
]